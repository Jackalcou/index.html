    <script>
        function showSection(sectionId) {
            // Ocultar todas las secciones
            const sections = ['home', 'servicios', 'tienda', 'soporte'];
            sections.forEach(id => {
                document.getElementById(id).classList.remove('section-active');
                document.getElementById(id).classList.add('section-hidden');
            });

            // Mostrar la seleccionada
            const activeSection = document.getElementById(sectionId);
            activeSection.classList.remove('section-hidden');
            activeSection.classList.add('section-active');

            // Scroll al inicio
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
